{
  "name": "cubejs-uikit",
  "version": "0.0.1",
  "description": "UIKit for Cube.js projects",
  "main": "dist/core.js",
  "type": "module",
  "scripts": {
    "start": "mkdir -p showcase && rm -vrf showcase/* && parcel index.html --out-dir showcase",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "mkdir -p dist && rm -vrf dist/* && rollup -c rollup.config.js && npm run size-limit",
    "now-build": "mkdir -p static && rm -vrf static/* && parcel build --out-dir static index.html",
    "now-deploy": "npm run build && now --prod static",
    "size-limit": "node ./size-limit-config.js && npx size-limit"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cube-js/cube.js/tree/master/packages/cubejs-uikit"
  },
  "keywords": [
    "design system",
    "ui kit",
    "cube.js"
  ],
  "author": "Statsbot, Inc.",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-react": "^7.10.4",
    "@rollup/plugin-babel": "^5.1.0",
    "@rollup/plugin-node-resolve": "^8.4.0",
    "@rollup/plugin-url": "^5.0.1",
    "@size-limit/preset-small-lib": "^4.5.5",
    "jsx-native-events": "^1.0.2",
    "numl": "^0.11.30",
    "parcel": "^1.12.4",
    "parcel-bundler": "^1.12.4",
    "rollup": "^2.22.2",
    "rollup-plugin-postcss": "^3.1.3",
    "rollup-plugin-terser": "^6.1.0",
    "size-limit": "^4.5.5"
  },
  "dependencies": {
    "native-events": "^1.0.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "browserslist": [
    "iOS 11",
    "last 10 Chrome versions",
    "last 5 Firefox versions",
    "last 3 Safari versions"
  ],
  "size-limit": [
    {
      "name": "Root Component",
      "path": [
        "dist/Root.js"
      ],
      "ignore": [
        "react",
        "jsx-native-events"
      ]
    },
    {
      "name": "Topbar Component",
      "path": [
        "dist/Topbar.js"
      ],
      "ignore": [
        "react",
        "jsx-native-events"
      ]
    },
    {
      "name": "Footer Component",
      "path": [
        "dist/Footer.js"
      ],
      "ignore": [
        "react",
        "jsx-native-events"
      ]
    },
    {
      "name": "SchemeSwitch Component",
      "path": [
        "dist/SchemeSwitch.js"
      ],
      "ignore": [
        "react",
        "jsx-native-events"
      ]
    }
  ]
}
